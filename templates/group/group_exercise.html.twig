{% extends 'base.html.twig' %}

{% block title %}Liste des exercices{% endblock %}

{% block body %}
    <div class ="container ml-3 mt-3 ">
        <a href="{{ path('exercise_list')}}"> <button type="button" class="btn btn-primary float-end">Retour</button></a>
        <h2>Les exercices de la classe : {{group.name}}</h2>
        <table class="table table-hover table-striped ml-3">
            <thead>
                <tr>
                    <th scope="col">Titre de l'exercice</th>
                    <th scope="col">Instructions</th>
                    <th scope="col">Date de cr√©ation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for exercise in exercises %}
                <tr>
                    <td>{{exercise.title}}</td>
                    <td>{{exercise.instruction}}</td>
                    <td>{{exercise.created_at|date("d/m/Y") }}</td>
                    <td >
                        <a href="{{ path('exercise_show', {id : exercise.id})}}"><i class="bi bi-eye btn btn-sm btn-primary mt-1"></i></a>
                        <a href="{{ path('exercise_edit', {id : exercise.id})}}"><i class="bi bi-pencil-square btn btn-sm btn-warning mt-1"></i></a>
                        <a href="{{ path('exercise_remove', {id : exercise.id})}}"><i class="bi bi-trash btn btn-sm btn-danger mt-1"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
