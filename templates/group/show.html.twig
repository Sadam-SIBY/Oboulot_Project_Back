{% extends 'base.html.twig' %}

{% block title %}Détail d'une classe{% endblock %}

{% block body %}
       <div class ="container ml-3 mt-3">
            <a href="{{ path('group_list')}}"> <button type="button" class="btn btn-primary float-end">Retour</button></a>
            <h2>{{group.name}}</h2>

            <table class="table table-hover table-striped ml-3">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <td>{{ group.name }}</td>
                    </tr>
                    <tr>
                        <th>Niveau</th>
                        <td> {{group.level}}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{group.description}}</td>
                    </tr>
                </thead>
            </table>

            <div class= 'mb-3 d-flex justify-content-center'>
                <a href="{{ path('group_user', {id : group.id})}}" class="me-3"> <button type="button" class="btn btn-secondary">Liste des élèves</button></a>
                <a href="{{ path('group_exercise', {id : group.id})}}" class="text-center"> <button type="button" class="btn btn-secondary">Liste des exercices</button></a>
            </div>
        </div>
{% endblock %}