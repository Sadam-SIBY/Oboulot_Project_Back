{% extends 'base.html.twig' %}

{% block title %}Messages envoyés{% endblock %}

{% block body %}
<div class ="container ml-3 mt-3">
    <a href="{{ path('message_home')}}" class="btn btn-success float-end">Retour</a>
    <h2>Messages envoyés</h2>
    <table class="table table-hover table-striped ">
        <thead>
            <tr>
                <th scope="col">De</th>
                <th scope="col">Date</th>
                <th scope="col">lu/non lu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for message in app.user.sent %}
            <tr> 
                <td>{{message.sender.email}}</td>
                <td>{{message.createdAt|date('d/m/Y H:i')}}</td>
                <td>{{message.isRead}}</td>
                <td>
                    <a href="{{ path('message_read', {id : message.id})}}"><i class="bi bi-eye btn btn-sm btn-primary mt-1"></i></a>
                    <a href="{{ path('message_remove', {id : message.id})}}"><i class="bi bi-trash btn btn-sm btn-danger mt-1"></i></a>
                </td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun message trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>  
{% endblock %}