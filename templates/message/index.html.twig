{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}

    <div class ="container ml-3 mt-3">
        <a href="{{ path('message_send')}}" class="btn btn-success float-end">Envoyer un message</a>
        <h2>Accueil de la messagerie</h2>

        <table class="table table-hover table-striped ml-3">
            <thead>
                <tr>
                    <th>Nombre de messages reçus</th>
                    <td>{{ app.user.received|length }}</td>
                </tr>
                <tr>
                    <th>Nombre de messages envoyés</th>
                    <td>{{ app.user.sent|length }}</td>
            </thead>
        </table>

        <div class= 'mb-3 d-flex justify-content-center'>
                <a href="{{ path('message_received')}}" class="me-3"> <button type="button" class="btn btn-secondary">Messages reçus</button></a>
                <a href="{{ path('message_sent')}}" class="text-center"> <button type="button" class="btn btn-secondary">Messages envoyés</button></a>
        </div>
    </div>

{% endblock %}
