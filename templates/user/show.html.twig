{% extends 'base.html.twig' %}
  
{% block title %}Utilisateur{% endblock %}

{% block body %}
    <div class ="container ml-3 mt-3">
        <a href="{{ path('user_list')}}"> <button type="button" class="btn btn-primary float-end">Retour</button></a>
        <div class ="row d-flex justify-content-center">
            <div class ="col-md-10 mt-5 pt-5">
                <div class ="row z-depth-3">
                    <div class="card-fluid col-12 col-md-6" id="card_user_picture" style="width: 18rem;">
                        {% if (user.picture) %}
                            <img class="card-img-top" src="{{asset('images/'~ user.picture)}}" alt=" ">
                        {% else %}
                            <img class="card-img-top" src="{{asset('images/user.png')}}" alt="Image de profil ">
                        {% endif %}
                        <div class="card-body">
                            <h3 class="card-title font-weight-bold text-white mt-4">{{ user.firstname }} {{ user.lastname }}</h3>
                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn text-warning"><i class='far fa-edit fa-2x mb-4'></i></a>
                        </div>
                    </div>
                    <div class='col-sm-8 col-12 col-md-6 bg-white rounded-rigth'>
                        <h2 class='mt-3 text-center'>Informations</h2>
                        <hr class='bg-primary'> 
                        <div class='row'>
                            <div class='col-sm-6'>
                                <h3 class='font-weight-bold text-primary-subtle'>Email</h3>
                                <p class='text-muted'>{{ user.email }}</p>
                            </div>
                            <div class='col-sm-6'>
                                <h3 class='font-weight-bold text-primary-subtle'>Role</h3>
                                <p class='text-muted'>{{ user.roles ? user.roles|json_encode : '' }}</p>
                            </div>
                        </div>
                        <hr class='bg-primary'>
                        <div class='row'>
                            <div class='col-sm-6'>
                                <h3 class='font-weight-bold text-primary-subtle'>Classes :</h3>
                                <ul class="navbar-nav">
                                    {% for group in user.groups %}
                                        <li class='text-muted nav-item'>{{ group.name }}</li>
                                     {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}