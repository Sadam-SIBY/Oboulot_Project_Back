{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
<section class ="container-fluid mt-5 my-4 w-75">
    <div class="row">
        <div class=" card col-12  col-sm-8 col-md-6  m-auto px-5 pt-3 pb-3">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            <h4>Réinitialiser le mot de passe</h4>
                <div class="mb-3">
                    <small>Saisissez l'adresse email associée à votre compte. Nous vous enverrons un lien pour réinitialiser votre mot de passe</small>
                </div>
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                    
                <button class="btn btn-primary mt-3 mb-2">Envoyer</button>
            {{ form_end(requestForm) }}
            <a href="{{path('app_login')}}">Retour à la page de connexion</a>
        </div>
    </div>
</section>
{% endblock %}