{% extends 'base.html.twig' %}

{% block title %}Détail d'un exercice{% endblock %}

{% block body %}
    <div class ="container ml-3 mt-3">
        <a href="{{ path('exercise_list')}}"> <button type="button" class="btn btn-primary float-end">Retour</button></a>
        <h2> {{exercise.title}}</h2>

        <table class="table table-hover table-striped ml-3">
            <thead>
                <tr>
                    <th>Titre</th>
                    <td> {{exercise.title}}</td>
                </tr>
                <tr>
                    <th>Consigne</th>
                    <td>{{exercise.instruction}}</td>
                </tr>
                <tr>
                    <th>Matière</th>
                    <td>{{exercise.subject}}</td>
                </tr>
            </thead>
        </table>

        <div class= 'mb-3 d-flex justify-content-center'>
                <a href="{{ path('exercise_questions', {id : exercise.id})}}" class="me-3"> <button type="button" class="btn btn-secondary">Liste des questions</button></a>
    </div>
{% endblock %}