{% extends 'base.html.twig' %}

{% block title %}Liste des exercices{% endblock %}

{% block body %}
    <div class ="container ml-3 mt-3">
        <a href="{{ path('exercise_create')}}" class="btn btn-success float-end">Ajouter</a>
        <h2>Liste des exercices :</h2>
        <table class="table table-hover table-striped">
            <thead class ="text-center ">
                <tr>
                    <th scope="col">Date de création</th>
                    <th scope="col">Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class ="text-center ">
                {% for exercise in exercises %}
                <tr>
                    <td>{{ exercise.createdAt|date("d/m/Y") }}</td>
                    <td>{{exercise.title}}</td>
                    <td>
                        <a href="{{ path('exercise_show', {id : exercise.id})}}"><i class="bi bi-eye btn btn-sm btn-primary mt-1"></i></a>
                        <a href="{{ path('exercise_edit', {id : exercise.id})}}"><i class="bi bi-pencil-square btn btn-sm btn-warning mt-1"></i></a>
                        <a href="{{ path('exercise_remove', {id : exercise.id})}}"><i class="bi bi-trash btn btn-sm btn-danger mt-1"></i></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5">Aucun exercice trouvé</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
