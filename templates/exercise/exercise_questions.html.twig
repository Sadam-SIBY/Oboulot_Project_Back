{% extends 'base.html.twig' %}

{% block title %}Liste des questions{% endblock %}

{% block body %}
    <div class="container ml-3 mt-3">
    <a href="{{ path('question_list')}}"> <button type="button" class="btn btn-primary float-end">Retour</button></a>
        <h2>Les questions de l'exercice : {{exercise.title}}</h2>
        <table class="table table-hover table-striped ml-3">
            <thead>
                <tr>
                    <th>Numéro</th>
                    <th>Intitulé</th>
                    <th>Réponse attendue</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for question in questions %}
                <tr>
                    <td>{{question.number}}</td>
                    <td>{{question.content}}</td>
                    <td>{{question.teacherAnswer}}</td>
                    <td >
                        <a href="{{ path('question_show', {id : question.id})}}"><i class="bi bi-eye btn btn-sm btn-primary mt-1"></i></a>
                        <a href="{{ path('question_edit', {id : question.id})}}"><i class="bi bi-pencil-square btn btn-sm btn-warning mt-1"></i></a>
                        <a href="{{ path('question_remove', {id : question.id})}}"><i class="bi bi-trash btn btn-sm btn-danger mt-1"></i></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="8">Aucune question trouvée</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}